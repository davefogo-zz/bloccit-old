<h1>Edit Sponsored Post</h1>

<div class="row">
  <div class="col-md-4">
    <%= form_for [@sponsored_post.topic, @sponsored_post] do |f| %>
      <div class="form_group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter sponsored post title." %>
      </div>
      <div class="form_group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter body." %>
      </div>
      <div class="form_group">
        <%= f.label :price %>
        <%= f.number_field :price, class: 'form-control', placeholder: "Enter price." %>
      </div>
        <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
